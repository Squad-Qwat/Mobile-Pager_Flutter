rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }
    
    // Merchants collection
    match /merchants/{merchantId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(merchantId);
      allow update, delete: if isOwner(merchantId);
    }
    
    // Temporary pagers collection
    match /temporary_pagers/{pagerId} {
      // Anyone can read (needed for QR scan to verify)
      allow read: if true;
      
      // Only authenticated merchant can create their own temporary pagers
      allow create: if isAuthenticated() 
                    && request.resource.data.merchantId == request.auth.uid;
      
      // Only merchant owner can update or delete
      allow update, delete: if isAuthenticated() 
                            && resource.data.merchantId == request.auth.uid;
    }
    
    // Active pagers collection
    match /active_pagers/{pagerId} {
      // Merchant and customer who owns the pager can read
      allow read: if isAuthenticated() 
                  && (resource.data.merchantId == request.auth.uid
                      || resource.data.customerId == request.auth.uid);
      
      // Only authenticated users can create (when scanning QR)
      // Must match the customer ID in the data
      allow create: if isAuthenticated() 
                    && request.resource.data.customerId == request.auth.uid;
      
      // Only merchant owner can update the pager status
      allow update: if isAuthenticated() 
                    && resource.data.merchantId == request.auth.uid;
      
      // Only merchant owner can delete
      allow delete: if isAuthenticated() 
                    && resource.data.merchantId == request.auth.uid;
    }
    
    // History collection (existing)
    match /history/{historyId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}
